<span data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link">
    <% 
        var pageUrl = encodeURI(post.permalink)
        var href_twitter = "https://twitter.com/intent/tweet?url=" + pageUrl
        var href_facebook = "https://www.facebook.com/sharer.php?u=" + pageUrl
        var href_pinterest = "http://pinterest.com/pin/create/button/?url=" + pageUrl
        var href_linkedin = "https://www.linkedin.com/shareArticle?mini=true&url=" + pageUrl   
    %>
    <a href="<%- href_linkedin %>" class="article-share-linkedin" target="_blank" title="LinkedIn"></a>
    <a href="<%- href_pinterest %>" class="article-share-pinterest" target="_blank" title="Pinterest"></a>
    <a href="<%- href_facebook %>" class="article-share-facebook" target="_blank" title="Facebook"></a>
    <a href="<%- href_twitter %>" class="article-share-twitter" target="_blank" title="Twitter"></a>
</span>