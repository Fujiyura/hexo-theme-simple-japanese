.toc-article
  position: relative;
  margin: 2em 0;
  padding: 0.5em 1em;
  border: solid 3px #95ccff;
  border-radius: 8px;
  
  ol,li
    padding: 0;

.toc-title
  position: absolute;
  display: inline-block;
  top: -15px;
  left: 10px;
  padding: 0 9px;
  line-height: 1;
  font-size: 22px;
  background: #FFF;
  color: #95ccff;
  font-weight: bold;
